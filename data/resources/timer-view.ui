<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <menu id="timer_state_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Pomodoro</attribute>
        <attribute name="action">timer.state</attribute>
        <attribute name="target">pomodoro</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Short Break</attribute>
        <attribute name="action">timer.state</attribute>
        <attribute name="target">short-break</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Long Break</attribute>
        <attribute name="action">timer.state</attribute>
        <attribute name="target">long-break</attribute>
      </item>
    </section>
  </menu>

  <template class="PomodoroTimerView" parent="GtkWidget">
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">50</property>
        <property name="halign">center</property>
        <property name="valign">center</property>
        <property name="margin-top">20</property>
        <property name="margin-bottom">50</property>
        <property name="margin-start">20</property>
        <property name="margin-end">20</property>

        <child>
          <object class="GtkMenuButton" id="timer_state_menubutton">
            <property name="receives-default">0</property>
            <property name="halign">start</property>
            <!-- <property name="always-show-arrow">0</property> -->
            <property name="has-frame">0</property>
            <property name="use-underline">0</property>
            <property name="direction">down</property>
            <property name="menu-model">timer_state_menu</property>
            <style>
              <class name="title-1"/>
              <class name="pomodoro-timer-state"/>
            </style>
          </object>
        </child>

        <child>
          <object class="GtkOverlay">
            <child type="overlay">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">5</property>
                <property name="halign">center</property>
                <property name="valign">center</property>
                <child>
                  <object class="PomodoroTimerLabel" id="timer_label">
                    <property name="halign">center</property>
                    <style>
                      <class name="pomodoro-timer-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="PomodoroTimerLevelBar" id="session_progressbar">
                    <property name="halign">center</property>
                    <property name="margin-top">10</property>
                    <property name="margin-bottom">10</property>
                    <property name="margin-start">20</property>
                    <property name="margin-end">20</property>
                    <style>
                      <class name="pomodoro-session-progressbar"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="PomodoroTimerProgressBar" id="timer_progressbar">
                <style>
                  <class name="pomodoro-timer-progressbar"/>
                </style>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="PomodoroTimerControlButtons"/>
        </child>

      </object><!-- box -->
    </child>

    <!-- TODO: place GtkWindowHandle as background? -->
    <child>
      <object class="GtkGestureClick" id="click_gesture">
        <signal name="pressed" handler="on_pressed" swapped="no"/>
      </object>
    </child>
    <child>
      <object class="GtkGestureDrag" id="drag_gesture">
        <signal name="drag-update" handler="on_drag_update" swapped="no"/>
      </object>
    </child>
  </template>
</interface>

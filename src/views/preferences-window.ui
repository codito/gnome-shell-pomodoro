<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="PomodoroPreferencesWindow" parent="AdwApplicationWindow">
    <property name="title" translatable="yes">Preferences</property>
    <property name="default_width">900</property>
    <property name="default_height">720</property>
    <property name="width-request">360</property>
    <property name="height-request">200</property>
    <property name="icon_name">gnome-pomodoro</property>
    <property name="startup_id">gnome-pomodoro-preferences</property>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 700sp</condition>
        <setter object="split_view" property="collapsed">True</setter>
      </object>
    </child>
    <property name="content">
      <object class="AdwToastOverlay" id="toast_overlay">
        <property name="child">
          <object class="AdwNavigationSplitView" id="split_view">
            <property name="min-sidebar-width">200</property>
            <property name="sidebar">
              <object class="AdwNavigationPage">
                <property name="title" bind-source="PomodoroPreferencesWindow" bind-property="title" bind-flags="sync-create"/>
                <property name="child">
                  <object class="AdwToolbarView">
                    <child type="top">
                      <object class="AdwHeaderBar">
                        <property name="show-title">True</property>
                      </object>
                    </child>
                    <property name="content">
                      <object class="GtkStackSidebar">
                        <property name="stack">stack</property>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </property>
            <property name="content">
              <object class="AdwNavigationPage" id="content_page">
                <property name="title"> </property>
                <property name="child">
                  <object class="AdwToolbarView">
                    <child type="top">
                      <object class="AdwHeaderBar" id="content_headerbar">
                        <property name="show-title">False</property>
                      </object>
                    </child>
                    <property name="content">
                      <object class="GtkStack" id="stack">
                        <property name="vhomogeneous">False</property>
                        <signal name="notify::visible-child" handler="on_stack_visible_child_notify" swapped="false" />
                        <child>
                          <object class="GtkStackPage">
                            <property name="title" translatable="yes">Timer</property>
                            <property name="icon-name">timer-symbolic</property>
                            <property name="child">
                              <object class="PomodoroPreferencesPageTimer"/>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkStackPage">
                            <property name="title" translatable="yes">Notifications</property>
                            <property name="child">
                              <object class="PomodoroPreferencesPageNotifications"/>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkStackPage">
                            <property name="title" translatable="yes">Appearance</property>
                            <property name="child">
                              <object class="GtkLabel">
                                <property name="label">Appearance</property>
                              </object>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkStackPage">
                            <property name="title" translatable="yes">Sounds</property>
                            <property name="child">
                              <object class="GtkLabel">
                                <property name="label">Sounds</property>
                              </object>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkStackPage">
                            <property name="title" translatable="yes">Distractions</property>
                            <property name="child">
                              <object class="GtkLabel">
                                <property name="label">Distractions</property>
                              </object>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkStackPage">
                            <property name="title" translatable="yes">Keyboard Shortcuts</property>
                            <property name="child">
                              <object class="GtkLabel">
                                <property name="label">Keyboard Shortcuts</property>
                              </object>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkStackPage">
                            <property name="title" translatable="yes">Power Management</property>
                            <property name="child">
                              <object class="GtkLabel">
                                <property name="label">Power Management</property>
                              </object>
                            </property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkStackPage">
                            <property name="title" translatable="yes">Custom Actions</property>
                            <property name="child">
                              <object class="GtkLabel">
                                <property name="label">Custom Actions</property>
                              </object>
                            </property>
                          </object>
                        </child>
                      </object>
                    </property>
                  </object>
                </property>
              </object><!-- content_page -->
            </property>
          </object><!-- split_view -->
        </property>
      </object><!-- toast_overlay -->
    </property>
    <style>
      <class name="preferences"/>
    </style>
  </template>
</interface>

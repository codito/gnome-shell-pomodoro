<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-pomodoro">
  <enum id="org.gnomepomodoro.Pomodoro.AdvancementMode">
    <value nick="continuous" value="0"/>
    <value nick="manual" value="1"/>
    <value nick="wait-for-activity" value="2"/>
  </enum>
  <enum id="org.gnomepomodoro.Pomodoro.Scheduler">
    <value nick="simple" value="0"/>
    <value nick="adaptive" value="1"/>
  </enum>

  <schema id="org.gnomepomodoro.Pomodoro" path="/org/gnomepomodoro/Pomodoro/">
    <!--
    <child name="preferences" schema="org.gnomepomodoro.Pomodoro.preferences"/>
